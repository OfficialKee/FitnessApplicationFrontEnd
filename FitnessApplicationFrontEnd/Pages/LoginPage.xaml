<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApplicationFrontEnd.Pages.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout Padding="20" Spacing="25" VerticalOptions="Center">
        <Label Text="Welcome to Fake FitBod"
               FontSize="24"
               HorizontalOptions="Center" />
        <Button Text="Sign in with Google"
                FontSize="18"
                BackgroundColor="#4285F4"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnGoogleSignInClicked" />
        <Button Text="Sign up with Google"
                FontSize="18"
                BackgroundColor="#34A853"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                Clicked="OnGoogleSignUpClicked" />
    </VerticalStackLayout>
</ContentPage>